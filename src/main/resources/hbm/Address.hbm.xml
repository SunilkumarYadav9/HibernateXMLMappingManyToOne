<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.blog.cavalr.hibernate.Address" table="address">
        <id name="addressId" type="java.lang.Long">
            <column name="address_id" />
            <generator class="native" />
        </id>

        <property name="line1" type="string">
            <column name="line1" not-null="false" />
        </property>

        <property name="line2" type="string">
            <column name="line2" not-null="false" />
        </property>

        <property name="city" type="string">
            <column name="city" not-null="false" />
        </property>

        <property name="state" type="string">
            <column name="state" not-null="false" />
        </property>

        <property name="country" type="string">
            <column name="country" not-null="false" />
        </property>
    </class>
</hibernate-mapping>